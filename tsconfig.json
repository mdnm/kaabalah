{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./wasm/src"]
  },
  "include": ["src/**/*", "wasm/src/**/*"],
  "exclude": ["node_modules", "dist"]
} 